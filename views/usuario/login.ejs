<%- include('../components/header.ejs') %>
<div class="container">
  <div class="row mt-4 mb-4" style="display: flex; justify-content: center;">
    <div class="col-6">
      <div class="card" style="border: 1px solid #007bff;">
        <div class="card-body">
          <div class="card-title">
            <h1>Iniciar sesión</h1>
          </div>
          <form action="/usuario/login" method="POST">
            <%- include('../components/error.ejs') %>

            <div class="mb-2">
              <label class="form-label" for="email">Email:</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"  
              />
            </div>
            <div class="mb-2">
              <label class="form-label" for="password">Contraseña:</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
              />
            </div>
            <div class="mb-2">
              <a href="/register">¿No tienes una cuenta? Regístrate</a>
            </div>
            <button class="btn btn-primary" type="submit">
              Iniciar sesión
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../components/footer.ejs') %>
