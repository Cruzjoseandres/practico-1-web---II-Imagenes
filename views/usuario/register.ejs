<%- include('../components/header.ejs') %>
<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <h1>Registro</h1>
          </div>
          <form action="/usuario/register" method="POST">
            <%- include('../components/error.ejs') %>

            <div class="mb-2">
              <label class="form-label" for="email">Email:</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                
              />
            </div>
            <div class="mb-2">
              <label class="form-label" for="password">Contraseña:</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                
              />
            </div>
            <div class="mb-2">
              <label class="form-label" for="fullName">Nombre Completo:</label>
              <input
                class="form-control"
                type="text"
                id="fullName"
                name="fullName"     
              />
            </div>
            <a href="/login">¿Ya tienes una cuenta? Inicia sesión</a>
            <button class="btn btn-primary" type="submit">Registrarse</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../components/footer.ejs') %>
