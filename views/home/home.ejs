<%- include('../components/header.ejs') %>

<div class="container">
    <div class="row mt-4 mb-4">
        <div class="col-6">
            <h1>Bienvenido <%= user.fullName %></h1>
        </div>
    </div>
</div>
<div class="container">
  <h1>Lista de Imágenes</h1>

  <%- include('../components/error.ejs') %> 
  <% if (images.length==0) { %>
    <p>No hay imágenes subidas.</p>
  <% } else { %>

  <div class="row">
    <% images.forEach(imagen => { %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <img
          src="<%= '/uploads/' + imagen.id + '.jpg' %>"
          class="card-img-top"
          alt="<%= imagen.titulo %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= imagen.titulo %></h5>
          <p class="card-text"><%= imagen.descripcion %></p>
          <div style="display: flex; justify-content: left; gap: 10px">
            <a href="/imagenes/<%= imagen.id %>" class="btn btn-info">Ver</a>
            <form
              onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta imagen?');"
              method="POST"
              action="/imagenes/<%= imagen.id %>/delete"
            >
              <button class="btn btn-danger" type="submit">Eliminar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>


<div class="container">
  <h1>Lista de Álbumes</h1>

  <%- include('../components/error.ejs') %> <% if (albums.length == 0) { %>
  <p>No hay álbumes registrados.</p>
  <% } else { %>
  <div class="row">
    <% albums.forEach(album => { %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if (album.imagenes && album.imagenes.length > 0) { %>
         
          <img
            src="<%= '/uploads/' + album.imagenes[0].id + '.jpg' %>"
            class="card-img-top"
            alt="<%= album.titulo %>"
          />
        <% } else { %>
          <p>No hay imágenes disponibles</p>
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= album.titulo %></h5>
          <div style="display: flex; justify-content: left; gap: 10px">
            <a href="/album/<%= album.id %>" class="btn btn-info">Ver</a>
            <form
              onsubmit="return confirm('¿Estás seguro de que deseas eliminar este álbum?');"
              method="POST"
              action="/album/<%= album.id %>/delete"
            >
              <button class="btn btn-danger" type="submit">Eliminar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
    <% } %>
</div>

<%- include('../components/footer.ejs') %>